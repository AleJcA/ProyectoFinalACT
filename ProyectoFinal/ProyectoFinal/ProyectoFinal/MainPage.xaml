<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinal.MainPage"
             xmlns:local="clr-namespace:ProyectoFinal.ViewModels"
             >

    <ContentPage.BindingContext>
        <local:ViewModelMenu></local:ViewModelMenu>
    </ContentPage.BindingContext>

    <StackLayout VerticalOptions="CenterAndExpand" Padding="30">

        <Label  Text="Menu" HorizontalOptions="Center" FontSize="24" FontAttributes="Bold" Margin="0,0,0,20" />


        <Button Command="{Binding navegarCrearAereo}" Text="Crear Vehiculo Aereo" BackgroundColor="#2196F3" TextColor="White" />

        <Button Command="{Binding navegarCrearTerrestre}" Text="Crear Vehiculo Terrestre" BackgroundColor="#2196F3" TextColor="White" />

        <Button Command="{Binding navegarMostrarTerrestre}" Text="Mostrar Vehiculos Terrestres" BackgroundColor="#2196F3" TextColor="White" />

        <Button Command="{Binding navegarMostrarAereo}" Text="Mostrar Vehiculos Aereos" BackgroundColor="#2196F3" TextColor="White" />



    </StackLayout>



</ContentPage>
