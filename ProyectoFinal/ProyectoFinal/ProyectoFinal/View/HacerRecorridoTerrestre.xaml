<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinal.View.HacerRecorridoTerrestre"
             xmlns:local="clr-namespace:ProyectoFinal.ViewModels"
             >
    <ContentPage.BindingContext>
        <local:ViewModelTerrestreHacerRecorrido></local:ViewModelTerrestreHacerRecorrido>
    </ContentPage.BindingContext>
    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Recorridos Terrestres"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Label Text="Kilometros a recorrer"></Label>
            <Entry Text="{Binding kmrTerrestre}" Keyboard="Numeric"></Entry>
            <Button Command="{Binding Recorrer}" Text="Hacer el Recorrido"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>